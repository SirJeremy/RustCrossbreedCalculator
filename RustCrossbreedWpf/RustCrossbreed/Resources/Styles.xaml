<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="NotoSansRegular">./Resources/Fonts/Noto_Sans-Regular.tts#Noto Sans</FontFamily>
    <FontFamily x:Key="NotoSansItalic">./Resources/Fonts/Noto_Sans-Italic.tts#Noto Sans</FontFamily>
    <FontFamily x:Key="NotoSansBold">./Resources/Fonts/Noto_Sans-Bold.tts#Noto Sans</FontFamily>
    <FontFamily x:Key="NotoSansBoldItalic">./Resources/Fonts/Noto_Sans-BoldItalic.tts#Noto Sans</FontFamily>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource NotoSansRegular}"/>
    </Style>

